<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Show static maintenance page for HTTP 500/503 when app is unstable.
    ErrorDocument 500 /maintenance.html
    ErrorDocument 503 /maintenance.html

    # Manual maintenance toggle from cPanel File Manager.
    # Enable: create file public/maintenance.enable
    # Disable: delete file public/maintenance.enable
    RewriteCond %{REQUEST_URI} !^/maintenance\.html$ [NC]
    RewriteCond %{REQUEST_URI} !^/images/ [NC]
    RewriteCond %{REQUEST_URI} !^/vendor/ [NC]
    RewriteCond %{REQUEST_URI} !^/build/ [NC]
    RewriteCond %{REQUEST_URI} !^/uploads/ [NC]
    RewriteCond %{REQUEST_URI} !^/storage/ [NC]
    RewriteCond %{REQUEST_URI} !^/favicon\.ico$ [NC]
    RewriteCond %{REQUEST_URI} !^/robots\.txt$ [NC]
    RewriteCond %{REQUEST_URI} !^/admin [NC]
    RewriteCond %{REQUEST_URI} !^/login$ [NC]
    RewriteCond %{DOCUMENT_ROOT}/maintenance.enable -f
    RewriteRule ^ - [R=503,L]

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Handle X-XSRF-Token Header
    RewriteCond %{HTTP:x-xsrf-token} .
    RewriteRule .* - [E=HTTP_X_XSRF_TOKEN:%{HTTP:X-XSRF-Token}]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Send Requests To Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>
